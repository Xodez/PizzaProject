<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Login Form</title>
    <link rel="stylesheet" type="text/css" href="../css/Home.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
</head>
<body>
<div id="menu">
    <h1>
        Pizzas
    </h1>
    <ul class="menu">
        <% for(let i = 0; i < pizzas.length; i++) { %>
            <% let pid = pizzas[i].pid
                let imid = pizzas[i].imid %>
            <li class="menu-item">
                <section>
                    <header>
                        <h2>
                            <%= pizzas[i].pizza %>
                        </h2>
                        <span class="spacer"></span>
                        <span class="price">
              $ <%= pizzas[i].price %>
            </span>
                    </header>
                    <img class="image" src="<%= imid %>" alt="">
                    <p>
                        <% for(let i = 0; i < ingredients.length; i++) { %>
                            <% if (pid == ingredients[i].pid) { %>
                                <%= ingredients[i].ingredient %>
                            <% } %>
                        <% } %>
                    <form action="/cartAdded" method="post">
                        <button type="submit" name="name" value="<%= pizzas[i].pizza %>">Order</button>
                    </form>
                    </p>
                </section>
            </li>
        <% } %>
    </ul>
    <h1>
        Non pizzas
    </h1>
    <ul class="menu">
        <% for(let i = 0; i < misc.length; i++) { %>
            <li class="menu-item">
                <section>
                    <header>
                        <h2>
                            <%= misc[i].misc %>
                        </h2>
                        <span class="spacer"></span>
                        <span class="price">
              $ <%= misc[i].price %>
            </span>
                    </header>
                    <p>
                    <form action="/cartAddeds" method="post">
                        <button type="submit" name="name" value="<%= misc[i].misc %>">Order</button>
                    </form>
                    </p>
                </section>
            </li>
        <% } %>
    </ul>
    <a href="/create">
        <button type="button">Customize your own pizza</button>
    </a>
</div>
</body>
</html>